<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SensorsApp.MainPage"
             Title="SensorsApp">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label FontSize="40" Margin="0,0,0,10" Text="Dostupné senzory"/>
            <Button Text="Tachometr" x:Name="TachometerButton" Clicked="TachometerButton_Clicked"/>
            <Button Text="Přijímač" x:Name="ReceiverButton" Clicked="ReceiverButton_Clicked"/>
            <Button Text="Informace o zařízení" x:Name="DeviceInfoButton" Clicked="DeviceInfo_Clicked"></Button>
            <Button Text="Kompas" x:Name="CompassButton" Clicked="CompassButton_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>