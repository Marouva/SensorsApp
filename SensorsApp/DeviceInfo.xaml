<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SensorsApp.DeviceInfo"
             Title="Informace o zařízení"
             >
    <ContentPage.Content>
        <ListView x:Name="infoList" RowHeight="70">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell TextColor="Black" DetailColor="Black" Text="{Binding Name}" Detail="{Binding Description}"></TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>